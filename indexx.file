<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width,initial-scale=1">
<title>Kashuuuu Hug Day Surprise ðŸ¤—</title>

<style>
*{box-sizing:border-box;margin:0;padding:0}

body{
  font-family:system-ui;
  background:linear-gradient(140deg,#ffd1dc,#ff6b8a,#7b1fa2);
  min-height:100vh;
  display:flex;
  justify-content:center;
  align-items:center;
  color:#333;
}

.card{
  width:min(430px,95vw);
  background:white;
  border-radius:26px;
  padding:20px;
  box-shadow:0 20px 55px rgba(0,0,0,.35);
  text-align:center;
  position:relative;
}

.page{display:none;}
.page.active{display:block;}

h1{font-size:1.4rem;margin:8px 0;}
p{margin:6px 0;color:#555;}

.gif{
  width:200px;
  height:200px;
  object-fit:cover;
  border-radius:18px;
  margin:12px auto;
  display:block;
}

button{
  border:none;
  padding:10px 18px;
  border-radius:999px;
  margin:6px;
  font-weight:700;
  cursor:pointer;
}

.next{background:#ff4b6e;color:white;}
.option{background:#eee;}
.hugBtn{background:#ff4b6e;color:white;}

.floatHeart{
  position:fixed;
  font-size:20px;
  animation:fly 1s forwards;
}
@keyframes fly{
  from{opacity:1;transform:translateY(0)}
  to{opacity:0;transform:translateY(-160px)}
}

.score{font-weight:700;margin-top:8px;}

</style>
</head>

<body>

<div class="card">

<!-- PAGE 1 -->
<div class="page active">
<h1>Oh hi Kashuuuu...</h1>
<p>You thought I forgot Hug Day? ðŸ˜Œ</p>
<img class="gif" src="https://media.giphy.com/media/3oriO0OEd9QIDdllqo/giphy.gif">
<button class="next">Continue</button>
</div>

<!-- PAGE 2 -->
<div class="page">
<h1>Wait... did I forget?</h1>
<p>Maybe I did... maybe I didn't ðŸ‘€</p>
<img class="gif" src="https://media.giphy.com/media/5GoVLqeAOo6PK/giphy.gif">
<button class="next">Find Out</button>
</div>

<!-- PAGE 3 -->
<div class="page">
<h1>Cuddle Quiz Begins ðŸ¤—</h1>
<p>Answer correctly to win hugs!</p>
<button class="next">Start Game</button>
</div>

<!-- PAGE 4 -->
<div class="page">
<h1>Q1: Best cuddle position?</h1>
<button class="option correct">Wrapped in your arms</button>
<button class="option">Sleep and ignore you</button>
<button class="option">Phone scrolling</button>
<p id="q1msg"></p>
</div>

<!-- PAGE 5 -->
<div class="page">
<h1>Q2: Perfect cuddle weather?</h1>
<button class="option correct">Rain + blanket</button>
<button class="option">Heatwave</button>
<button class="option">Office meeting</button>
<p id="q2msg"></p>
</div>

<!-- PAGE 6 -->
<div class="page">
<h1>Q3: Who gives best hugs?</h1>
<button class="option correct">Prarthit obviously</button>
<button class="option">Pillow</button>
<button class="option">Nobody</button>
<p id="q3msg"></p>
</div>

<!-- PAGE 7 -->
<div class="page">
<h1>Hug Catch Game</h1>
<p>Catch 4 hugs!</p>
<button id="hugMove">ðŸ¤—</button>
<div class="score">Caught: <span id="hugScore">0</span>/4</div>
</div>

<!-- PAGE 8 -->
<div class="page">
<h1>Speed Hug Challenge</h1>
<p>Tap before time ends!</p>
<button id="speedBtn" class="hugBtn">HUG!</button>
<p id="speedMsg"></p>
</div>

<!-- PAGE 9 -->
<div class="page">
<h1>Bonus Hug Rain</h1>
<img class="gif" src="https://media.giphy.com/media/3o6gbbkZ9OjyYoAeEU/giphy.gif">
<p>Tap anywhere ðŸ¤—</p>
<button class="next">Continue</button>
</div>

<!-- PAGE 10 -->
<div class="page">
<h1>Truth Revealed...</h1>
<p>I never forgot Hug Day.</p>
<img class="gif" src="https://media.giphy.com/media/26BRv0ThflsHCqDrG/giphy.gif">
<button class="next">Final Surprise</button>
</div>

<!-- PAGE 11 -->
<div class="page">
<h1>You Win Unlimited Hugs ðŸ’–</h1>
<img class="gif" src="https://media.giphy.com/media/3oriO6qJiXajN0TyDu/giphy.gif">
<p>
Official Result:<br>
Kashuuuu receives<br>
<strong>Lifetime hugs from Prarthit ðŸ¤—</strong>
</p>
<button onclick="location.reload()">Play Again</button>
</div>

</div>

<script>
let page=0;
const pages=document.querySelectorAll(".page");

function showPage(i){
 pages[page].classList.remove("active");
 page=i;
 pages[page].classList.add("active");
}

document.querySelectorAll(".next").forEach(btn=>{
 btn.onclick=()=>showPage(page+1);
});

function hearts(){
 const h=document.createElement("div");
 h.className="floatHeart";
 h.textContent="ðŸ’–";
 h.style.left=Math.random()*window.innerWidth+"px";
 h.style.top="70%";
 document.body.appendChild(h);
 setTimeout(()=>h.remove(),1000);
}

/* Quiz logic */
document.querySelectorAll(".correct").forEach(btn=>{
 btn.onclick=()=>{
   hearts();
   setTimeout(()=>showPage(page+1),600);
 };
});

document.querySelectorAll(".option:not(.correct)").forEach(btn=>{
 btn.onclick=()=>{
   btn.innerText="Wrong ðŸ˜ try again";
 };
});

/* Hug Catch Game */
let score=0;
const hugMove=document.getElementById("hugMove");
hugMove.onclick=()=>{
 score++;
 hearts();
 hugScore.textContent=score;
 hugMove.style.transform=`translate(${Math.random()*140-70}px,${Math.random()*50-25}px)`;
 if(score>=4) setTimeout(()=>showPage(page+1),700);
};

/* Speed Game */
let clicked=false;
speedBtn.onclick=()=>{
 clicked=true;
 hearts();
 speedMsg.innerText="Fast hugger ðŸ˜„";
 setTimeout(()=>showPage(page+1),700);
};

setTimeout(()=>{
 if(!clicked) speedMsg.innerText="Too slow, but hug anyway ðŸ˜Œ";
},3000);

/* Hug rain */
document.addEventListener("click",()=>{
 if(page===8){
   for(let i=0;i<6;i++) hearts();
 }
});
</script>

</body>
</html>
