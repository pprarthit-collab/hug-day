<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width,initial-scale=1">
<title>Hug Day Surprise ü§ó</title>

<style>
*{box-sizing:border-box;margin:0;padding:0}
body{
  font-family:system-ui;
  min-height:100vh;
  display:flex;
  justify-content:center;
  align-items:center;
  overflow:hidden;
  background:linear-gradient(-45deg,#ffd1dc,#ff6b8a,#ff9ecb,#7b1fa2);
  background-size:400% 400%;
  animation:bgMove 12s ease infinite;
}
@keyframes bgMove{
0%{background-position:0% 50%}
50%{background-position:100% 50%}
100%{background-position:0% 50%}
}

.card{
 width:min(430px,95vw);
 background:white;
 border-radius:26px;
 padding:18px;
 box-shadow:0 20px 55px rgba(0,0,0,.35);
 text-align:center;
 position:relative;
 overflow:hidden;
}

.page{display:none;}
.page.active{display:block;}

h1{font-size:1.3rem;margin:8px 0;}
p{color:#555;margin:6px 0;}

.gif{
 width:200px;height:200px;
 object-fit:cover;
 border-radius:18px;
 margin:10px auto;
 display:block;
}

button{
 border:none;
 padding:10px 18px;
 border-radius:999px;
 margin:6px;
 font-weight:700;
 cursor:pointer;
}

.next{background:#ff4b6e;color:white;}
.option{background:#eee;}
.hugBtn{background:#ff4b6e;color:white;}

.floatHeart{
 position:fixed;
 font-size:20px;
 animation:fly 1s forwards;
}
@keyframes fly{
 from{opacity:1;transform:translateY(0)}
 to{opacity:0;transform:translateY(-160px)}
}

/* cute floating characters */
.char{
 position:absolute;
 font-size:26px;
 animation:float 6s infinite linear;
 opacity:.6;
}
@keyframes float{
 from{transform:translateY(110vh)}
 to{transform:translateY(-10vh)}
}
</style>
</head>

<body>

<!-- floating cute emojis -->
<div class="char" style="left:10%">üêª</div>
<div class="char" style="left:40%;animation-delay:2s">üíñ</div>
<div class="char" style="left:70%;animation-delay:4s">üß∏</div>
<div class="char" style="left:85%;animation-delay:1s">‚ú®</div>

<div class="card" id="app"></div>

<!-- cute background music -->
<audio autoplay loop>
<source src="https://cdn.pixabay.com/download/audio/2022/03/15/audio_1eae5e1a5c.mp3?filename=romantic-background-112199.mp3" type="audio/mpeg">
</audio>

<script>
const pagesData=[
{t:"Hi Kashuuuu...",m:"You thought I forgot Hug Day? üòå",g:"https://media.giphy.com/media/l2R0aV7rL9N5U7z9C/giphy.gif"},
{t:"Maybe I forgot...",m:"Or maybe I planned something cute üëÄ",g:"https://media.giphy.com/media/3oriO0OEd9QIDdllqo/giphy.gif"},
{t:"Welcome to Hug Game!",m:"Win hugs by answering questions!",g:"https://media.giphy.com/media/26BRv0ThflsHCqDrG/giphy.gif"},
];

const questions=[
"Best cuddle weather?",
"Who gives best hugs?",
"Perfect movie cuddle?",
"Best cuddle snack?",
"Morning or night hugs?",
"Favorite hug type?",
"Rain cuddle or snow cuddle?",
"Big hug or surprise hug?",
"Couch cuddle or bed cuddle?",
"Forever cuddle partner?"
];

let current=0;
let hugs=0;
const app=document.getElementById("app");

function hearts(){
 const h=document.createElement("div");
 h.className="floatHeart";
 h.textContent="üíñ";
 h.style.left=Math.random()*window.innerWidth+"px";
 h.style.top="70%";
 document.body.appendChild(h);
 setTimeout(()=>h.remove(),1000);
}

function renderIntro(i){
 app.innerHTML=`
 <div class="page active">
 <h1>${pagesData[i].t}</h1>
 <p>${pagesData[i].m}</p>
 <img class="gif" src="${pagesData[i].g}">
 <button class="next">Next</button>
 </div>`;
 document.querySelector(".next").onclick=()=>next();
}

function renderQuestion(){
 if(current-3>=questions.length){
   renderGame();
   return;
 }
 const q=questions[current-3];
 app.innerHTML=`
 <div class="page active">
 <h1>${q}</h1>
 <button class="option correct">Answer involving cuddles</button>
 <button class="option">Wrong answer</button>
 <button class="option">Another wrong</button>
 </div>`;
 document.querySelector(".correct").onclick=()=>{
   hugs++;
   hearts();
   next();
 };
}

function renderGame(){
 app.innerHTML=`
 <div class="page active">
 <h1>Catch 5 hugs!</h1>
 <button id="move">ü§ó</button>
 <p>Hugs caught: <span id="score">0</span>/5</p>
 </div>`;
 let s=0;
 move.onclick=()=>{
   s++; hearts();
   score.textContent=s;
   move.style.transform=`translate(${Math.random()*140-70}px,${Math.random()*40-20}px)`;
   if(s>=5) next();
 };
}

function renderFinal(){
 app.innerHTML=`
 <div class="page active">
 <h1>BIGGEST HUG UNLOCKED ü§ó</h1>
 <img class="gif" src="https://media.giphy.com/media/3oriO6qJiXajN0TyDu/giphy.gif">
 <p>
 Screenshot this and send to Prarthit to claim
 <strong>Unlimited Lifetime Hugs üíñ</strong>
 </p>
 <button onclick="location.reload()">Replay</button>
 </div>`;
}

function next(){
 current++;
 if(current<3) renderIntro(current);
 else if(current<13) renderQuestion();
 else if(current==13) renderGame();
 else renderFinal();
}

renderIntro(0);
</script>

</body>
</html>
